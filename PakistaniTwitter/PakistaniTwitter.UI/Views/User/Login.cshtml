
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<head>
    <title>PakistaniTwitter Login Page</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:300i,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css">
        <style type="text/css">
        body {
            font-family: "Nunito Sans";
        }

        .login-form {
            padding: 25px;
        }

        h3 {
            padding-left: 30px;
            padding-right: 20px;
            font-weight: 700;
        }

        label {
            padding-top: 4px;
            padding-left: 4px;
        }

        .bg-color {
            background-color: rgb(245, 248, 250);
        }

            .bg-color:hover label {
                color: palegreen;
            }

        .btn-custom {
            background-color: green;
            border: none;
            border-radius: 6px;
            font-size: 20px;
            line-height: 28px;
            color: #fff;
            font-weight: 700;
            height: 48px;
        }

        .btn-custom {
            color: #fff !important;
            background-color: green;
        }

        .form-control {
            border: 0px;
            background-color: lightgreen;
            border-bottom: 2px solid #657786;
            padding: 0px 4px 0px 4px;
            min-height: 20px;
        }

            .form-control:focus {
                box-shadow: none;
                background-color: lightgreen;
                border-color: #31a1f2;
            }

            .fa {
                color: lightgreen;
                margin: 0 auto;
                display: block;
                text-align: center;
                font-size: 50px;
            }

        a {
            text-decoration: none;
            color: green;
        }

            a:hover {
                text-decoration: underline;
                color: rgb(27, 149, 224);
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6 p-0 pt-3">
                <i class="fa fa-twitter" style="color:green"></i>
                @using (Html.BeginForm())
                {
                    <h3 class="text-center pt-3">Log in to PakistaniTwitter</h3>
                    <form class="login-form" action="#">
                        <div class="mb-3 bg-color">
                            <label>Phone, email, or username</label>
                            @Html.TextBox("uname", null, new { @class = "form-control" })
                        </div>
                        <div class="mb-3 bg-color">
                            <label>Password</label>
                            @Html.Password("pwd", null, new { @class = "form-control" })
                        </div>
                        <button type="submit" value="SignIn" class="btn btn-custom btn-lg btn-block mt-3">
                            Log in
                        </button>
                        <div class="text-center pt-3 pb-3">
                            <a href="#" class="">Forgotten password?</a> .
                            @Html.ActionLink("Sign up for PakistaniTwitter", "Create")
                        </div>

                        <span class="warning col-sm-8">@TempData["err"]</span>
                    </form>
                }
            </div>
            <footer style="text-align:center; font-weight:bold; color:green">
                <p>&copy; @DateTime.Now.Year - PakistaniTwitter by Abdul Rehman Khan | 021-18-45278 | BS(SE) - Software Engineering</p>
            </footer>
            <div class="col-md-3"></div>
        </div>
    </div>
</body>
